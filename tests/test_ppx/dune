(executable
 (name pp)
 (modules pp)
 (libraries ppx_mysql ppxlib))

(rule
 (targets test_ppx.result.ml)
 (deps test_ppx.ml)
 (action
  (run ./pp.exe --impl %{deps} -o %{targets})))

(rule
 (targets test_ppx.result.reformatted.ml)
 (deps test_ppx.result.ml)
 (action
  (run ocamlformat %{deps} -o %{targets})))

(rule
 (targets test_ppx.expected.reformatted.ml)
 (deps test_ppx.expected.ml)
 (action
  (run ocamlformat %{deps} -o %{targets})))

(rule
 (alias runtest)
 (action
  (diff test_ppx.expected.reformatted.ml test_ppx.result.reformatted.ml)))
